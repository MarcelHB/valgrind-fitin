{
    "tests": [{
        "title": "Flipping a variable on n-th access",
        "files": ["sample1.c"],
        "output": "sample1",
        "expected": "36",
        "vg_params": "--mod-bit=5 --mod-load-time=3"
    },{
        "title": "Flipping causes different branching",
        "files": ["sample2.c"],
        "output": "sample2",
        "expected": "a LT 1",
        "vg_params": "--mod-bit=0 --mod-load-time=1"
    },{
        "title": "Flipped value is written back to memory",
        "files": ["sample3.c"],
        "output": "sample3",
        "expected": "3",
        "vg_params": "--mod-bit=1 --mod-load-time=3 --persist-flip=yes"
    },{
        "title": "Register tunneled load (x86-test only)",
        "cflags": "-m32",
        "files": ["sample4.c"],
        "output": "sample4",
        "expected": "2",
        "vg_params": "--mod-bit=1 --mod-load-time=3"
    },{
        "title": "Reassigning is not counting as instrumentable access",
        "files": ["sample5.c"],
        "output": "sample5",
        "expected": "2 3",
        "vg_params": "--mod-bit=0 --mod-load-time=2"
    },{
        "title": "MyDhrystone2",
        "files": ["dhry_1.c", "dhry_2.c"],
        "output": "dhry",
        "expected": null,
        "vg_params": "--mod-bit=4 --mod-load-time=5"
    }]
}
